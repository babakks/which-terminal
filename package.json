{
  "name": "which-terminal",
  "displayName": "Which Terminal?",
  "description": "Makes changing/opening new/default terminal more convenient.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.30.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "whichTerminal.setDefault",
        "title": "Which Terminal: Set default terminal"
      },
      {
        "command": "whichTerminal.openTerminal",
        "title": "Which Terminal: Open new terminal"
      },
      {
        "command": "whichTerminal.switchTerminal",
        "title": "Which Terminal: Switch terminal"
      }
    ],
    "keybindings": [
      {
        "command": "whichTerminal.openTerminal",
        "key": "Ctrl+Alt+Shift+`"
      },
      {
        "command": "whichTerminal.switchTerminal",
        "key": "Ctrl+Alt+`"
      }
    ],
    "configuration": {
      "title": "Which Terminal?",
      "properties": {
        "whichTerminal.recentTerminalsListSize": {
          "type": "number",
          "minimum": 0,
          "default": 3
        },
        "whichTerminal.windowsTerminals": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "markdownDescription": "Unique identifier of the terminal."
              },
              "title": {
                "type": "string",
                "markdownDescription": "Title of the terminal."
              },
              "shell": {
                "markdownDescription": "Path to the shell to be executed within the integrated terminal.",
                "type": "string"
              },
              "shellArgs": {
                "markdownDescription": "Ordered array of arguments to pass to the shell.",
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "cwd": {
                "markdownDescription": "Working directory of the shell. Leave empty for the workspace root.",
                "type": "string"
              },
              "env": {
                "markdownDescription": "Environment variables data as `string` key/value pairs.",
                "type": "object"
              },
              "init": {
                "markdownDescription": "Array of the commands to be sent to the shell at the beginning.",
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            },
            "required": [
              "id",
              "shell"
            ],
            "additionalProperties": false
          },
          "scope": "window",
          "markdownDescription": "Array of terminals on Windows platform. Default is [`cmd`, `powershell`].",
          "default": [
            {
              "id": "win-cmd",
              "title": "Command Prompt (cmd.exe)",
              "shell": "cmd.exe",
              "shellArgs": [],
              "cwd": "",
              "env": {},
              "init": []
            },
            {
              "id": "win-ps",
              "title": "PowerShell (powershell.exe)",
              "shell": "powershell.exe",
              "shellArgs": [],
              "cwd": "",
              "env": {},
              "init": []
            }
          ]
        },
        "whichTerminal.linuxTerminals": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "markdownDescription": "Unique identifier of the terminal."
              },
              "title": {
                "type": "string",
                "markdownDescription": "Title of the terminal."
              },
              "shell": {
                "markdownDescription": "Path to the shell to be executed within the integrated terminal.",
                "type": "string"
              },
              "shellArgs": {
                "markdownDescription": "Ordered array of arguments to pass to the shell.",
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "cwd": {
                "markdownDescription": "Working directory of the shell. Leave empty for the workspace root.",
                "type": "string"
              },
              "env": {
                "markdownDescription": "Environment variables data as `string` key/value pairs.",
                "type": "object"
              },
              "init": {
                "markdownDescription": "Array of the commands to be sent to the shell at the beginning.",
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            },
            "required": [
              "id",
              "shell"
            ],
            "additionalProperties": false
          },
          "scope": "window",
          "markdownDescription": "Array of terminals on Linux platform. Default is `bash`.",
          "default": [
            {
              "id": "linux-bash",
              "title": "bash",
              "shell": "/bin/bash",
              "shellArgs": [],
              "cwd": "",
              "env": {},
              "init": []
            }
          ]
        },
        "whichTerminal.osxTerminals": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "markdownDescription": "Unique identifier of the terminal."
              },
              "title": {
                "type": "string",
                "markdownDescription": "Title of the terminal."
              },
              "shell": {
                "markdownDescription": "Path to the shell to be executed within the integrated terminal.",
                "type": "string"
              },
              "shellArgs": {
                "markdownDescription": "Ordered array of arguments to pass to the shell.",
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "cwd": {
                "markdownDescription": "Working directory of the shell. Leave empty for the workspace root.",
                "type": "string"
              },
              "env": {
                "markdownDescription": "Environment variables data as `string` key/value pairs.",
                "type": "object"
              },
              "init": {
                "markdownDescription": "Array of the commands to be sent to the shell at the beginning.",
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            },
            "required": [
              "id",
              "shell"
            ],
            "additionalProperties": false
          },
          "scope": "window",
          "markdownDescription": "Array of terminals on OSX platform. Default is `bash`.",
          "default": [
            {
              "id": "osx-bash",
              "title": "bash",
              "shell": "/bin/bash",
              "shellArgs": [],
              "cwd": "",
              "env": {},
              "init": []
            }
          ]
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test",
    "test-all-but-extension": "mocha --require ts-node/register --exclude ./src/test/extension.test.ts ./src/test/**/*.test.ts"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^2.2.42",
    "@types/node": "^10.12.21",
    "@types/sinon": "^7.0.11",
    "chai": "^4.2.0",
    "mocha": "^6.0.2",
    "sinon": "^7.3.1",
    "ts-node": "^8.0.3",
    "tslint": "^5.12.1",
    "typescript": "^3.4.3",
    "vscode": "^1.1.28"
  },
  "dependencies": {
    "vscode-nls": "^4.1.0"
  }
}
