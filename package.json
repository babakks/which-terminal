{
  "name": "which-terminal",
  "displayName": "Which Terminal?",
  "description": "Makes changing/opening new/default terminal more convenient.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.30.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Which Terminal?",
      "definitions": {
        "terminal": {
          "$id": "#terminal",
          "type": "object",
          "properties": {
            "title": {
              "type": [
                "string",
                "null"
              ]
            },
            "shell": {
              "type": "string"
            },
            "shellArgs": {
              "type": [
                "array",
                "null"
              ],
              "items": {
                "type": "string"
              }
            },
            "env": {
              "type": "object"
            }
          },
          "required": [
            "shell"
          ]
        },
        "terminalSet": {
          "$id": "terminalSet",
          "type": "array",
          "items": {
            "$ref": "#terminal"
          }
        }
      },
      "properties": {
        "whichTerminal.showDefaultOnStatusBar": {
          "type": "boolean",
          "default": true
        },
        "whichTerminal.windowsTerminals": {
          "allOf": [
            {
              "$ref": "#terminalSet"
            },
            {
              "default": [
                {
                  "title": "cmd",
                  "shell": "cmd.exe",
                  "env": {}
                },
                {
                  "title": "powershell",
                  "shell": "powershell.exe",
                  "env": {}
                }
              ]
            }
          ]
        },
        "whichTerminal.linuxTerminals": {
          "allOf": [
            {
              "$ref": "#terminalSet"
            },
            {
              "default": [
                {
                  "title": "bash",
                  "shell": "/bin/bash",
                  "env": {}
                },
                {
                  "title": "bash",
                  "shell": "/bin/bash",
                  "env": {}
                }
              ]
            }
          ]
        },
        "whichTerminal.osxTerminals": {
          "allOf": [
            {
              "$ref": "#terminalSet"
            },
            {
              "default": [
                {
                  "title": "bash",
                  "shell": "/bin/bash",
                  "env": {}
                },
                {
                  "title": "bash",
                  "shell": "/bin/bash",
                  "env": {}
                }
              ]
            }
          ]
        }
      }
    },
    "commands": [
      {
        "command": "whichTerminal.changeDefaultTerminal",
        "title": "Which Terminal: Change default terminal"
      },
      {
        "command": "whichTerminal.openTerminal",
        "title": "Which Terminal: Open terminal"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "typescript": "^3.3.1",
    "vscode": "^1.1.28",
    "tslint": "^5.12.1",
    "@types/node": "^10.12.21",
    "@types/mocha": "^2.2.42"
  },
  "dependencies": {
    "vscode-nls": "^4.1.0"
  }
}
